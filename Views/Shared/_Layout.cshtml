<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon"/>
    <link rel="icon" href="~/favicon.ico" type="image/ico"/>
    <title>@ViewBag.Title - CarAds</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarAds.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <div>
                    
                    <a class="navbar-brand p-2 pb-3 bg-light rounded-circle" asp-area="" asp-page="/Index">
                        <img src="~/assets/images/car-ads-logo (2).png" alt="Logo" height="50" width="150" />
                    </a>
                </div>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse flex-grow-1">
                    <ul class="navbar-nav justify-content-between ms-auto mt-4 mb-3 mt-sm-0 mb-sm-0">
                        <li class="nav-item m-auto">
                            <a class="nav-link" asp-area="home" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item m-auto">
                            <a class="nav-link" asp-area="contact" asp-page="/Contact">Contact</a>
                        </li>
                        <li class="nav-item m-auto">
                            <a class="nav-link" asp-area="aboutUs" asp-page="/AboutUs">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="d-flex px-3 border-top footer text-muted">
        <div class="container ">
            <div class="row">
                <div class="col-12 col-md-4 my-auto">
                    <p class="text-muted text-center mb-0 text-md-start">© 2021 Company, Inc</p>
                </div>
                
                <a href="/" class="col-12 col-md-4 d-md-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                  <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                </a>

                <ul class="nav col-12 col-md-4 justify-content-center justify-content-md-end">
                  <li class="nav-item"><a asp-page="/Index" class="nav-link px-2 text-muted">Home</a></li>
                  <li class="nav-item"><a asp-page="/Contact" class="nav-link px-2 text-muted">Contact</a></li>
                  <li class="nav-item"><a asp-page="/AboutUs" class="nav-link px-2 text-muted">About Us</a></li>
                </ul>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>